{
    "plugins": ["node"],
    "extends": ["eslint:recommended", "plugin:node/recommended"],
    "rules": {
        "no-process-exit": 0,
        "no-console": 0,
        "node/no-unpublished-require": 0,
        "no-console-statement": 0
    },
    "overrides": [
        {
            "files": ["test/**"],
            "env": {
                "mocha": true
            }
        }
    ]
}
